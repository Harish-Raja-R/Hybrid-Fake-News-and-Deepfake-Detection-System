{
  "manifest_version": 3,
  "name": "A.U.R.A. Filter",
  "version": "1.2",
  "description": "An AI-powered tool to detect fake news and deepfakes in real-time.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
